@model IEnumerable<AXOLONCoreMVCv1.Models.TblEmployee>

@{
    ViewData["Title"] = "Manage Employees";
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success text-center">
        <strong>
            @TempData["Message"].ToString()
        </strong>
        <button class="btn btn-primary" onclick="this.parentElement.style.display='none'">Close</button>
    </div>
}
<div class="text-center">
    <h3 class="">Manage Employees</h3>
</div>

<p>
    
    <a class="btn-block" asp-action="EmployeeInsert">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                 @Html.DisplayName("Employee ID")
            </th>
            <th>
                 @Html.DisplayName("Employee Name")
            </th>
            <th>
                 @Html.DisplayName("Entry Date")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrydate)
            </td>
            <td>
                
                <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("EmployeeDelete", "Employee", new {empid = item.EmployeeId })'">
                    Delete
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
